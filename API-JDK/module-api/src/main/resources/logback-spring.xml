<configuration>
    <property name="LOG_ROOT" value="../logs"/>

    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- DO NOT put a date in this file name -->
        <!--<file>${LOG_ROOT}/app.log</file>-->

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- THIS is where the datetime belongs -->
            <fileNamePattern>${LOG_ROOT}/app.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- Keep 30 days -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="ROLLING"/>
    </root>

</configuration>





