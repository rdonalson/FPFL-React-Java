# EditorConfig helps maintain consistent coding styles
root = true

# -------------------------------------------------------
# Global defaults
# -------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# -------------------------------------------------------
# Markdown files
# -------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

# -------------------------------------------------------
# YAML (Spring Boot configs)
# -------------------------------------------------------
[*.yml]
indent_size = 4

# -------------------------------------------------------
# JSON
# -------------------------------------------------------
[*.json]
indent_size = 4

# -------------------------------------------------------
# XML (POMs, configs)
# -------------------------------------------------------
[*.xml]
indent_size = 4

# -------------------------------------------------------
# Shell scripts
# -------------------------------------------------------
[*.sh]
end_of_line = lf
